        <LinearLayout
            android:layout_marginTop="2mm"
            android:layout_marginLeft="5mm"
            android:layout_marginRight="5mm"
            android:layout_width="match_parent"
            android:layout_height="14mm"
            android:background="@drawable/mass"
            android:layout_marginBottom="3mm"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Fat: "
                    android:textColor="#f24a57"
android:layout_marginLeft="5mm"
                    android:textSize="6mm"
                    android:layout_marginTop="4mm"

                    />
                <TextView
                    android:textColor="#f24a57"

                    android:id="@+id/body_fat_per_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="6mm"
                    android:layout_marginTop="4mm"
                    android:layout_marginLeft="10mm"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="4mm"

            android:id="@+id/lowbfp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1mm"
            android:layout_width="90mm"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_gravity="left"
                android:layout_width="6mm"
                android:layout_height="6mm"
                android:src="@drawable/slim"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="50mm"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textSize="4.5mm"
                android:layout_marginLeft="2mm"
                android:layout_marginTop="0mm"/>
            <TextView
                android:id="@+id/lowbfptext"
                android:layout_gravity="right"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="8%"
                android:textSize="4.5mm"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/normalbfp"
            android:layout_marginLeft="4mm"

            android:layout_width="90mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="1mm"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_gravity="left"
                android:layout_width="6mm"
                android:layout_height="6mm"
                android:src="@drawable/health"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="50mm"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="4.5mm"
                android:layout_marginLeft="2mm"
                android:layout_marginTop="0mm"/>
            <TextView
                android:id="@+id/normalbfptextview"
                android:layout_gravity="right"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="8 - 20%"
                android:textSize="4.5mm"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="4mm"

            android:id="@+id/highbfp"
            android:layout_width="90mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="1mm"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_gravity="left"
                android:layout_width="6mm"
                android:layout_height="6mm"
                android:src="@drawable/over"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="50mm"
                android:layout_height="wrap_content"
                android:text="High"
                android:textSize="4.5mm"
                android:layout_marginLeft="2mm"
                android:layout_marginTop="0mm"/>
            <TextView
                android:id="@+id/highbfptextview"
                android:layout_gravity="right"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="20 - 25%"
                android:textSize="4.5mm" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="4mm"
            android:id="@+id/veryhighbfp"
            android:layout_width="90mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="1mm"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_gravity="left"
                android:layout_width="6mm"
                android:layout_height="6mm"
                android:src="@drawable/over"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="50mm"
                android:layout_height="wrap_content"
                android:text="Very High"
                android:textSize="4.5mm"
                android:layout_marginLeft="2mm"
                android:layout_marginTop="0mm"/>
            <TextView
                android:id="@+id/veryhighbfptextview"
                android:layout_gravity="right"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text=">25%"
                android:textSize="4.5mm"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="2mm"
            android:background="#a1a1a1"/>
