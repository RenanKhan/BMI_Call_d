<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/body_fat_per_waisttogglelayout"
        android:layout_marginTop="2.5mm"
        android:layout_marginLeft="18mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waist"
            android:id="@+id/waistbodyfatpertext"
            android:textSize="6.5mm"
            android:layout_marginTop="1mm"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/body_fat_per_waist_edittext"
            android:layout_width="18mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3mm"
            android:layout_marginLeft="3mm"
            >
            <TextView
                android:id="@+id/body_fat_per_waist_toggle_textview"
                android:layout_width="wrap_content"
                android:layout_height="7mm"
                android:textSize="6mm"
                android:background="?android:attr/selectableItemBackground"
                android:text="cm"
                android:layout_marginLeft="3mm"

                />
            <ImageView
                android:layout_marginLeft="1mm"
                android:layout_marginTop="4mm"
                android:layout_width="1.5mm"
                android:layout_height="1mm"
                android:id="@+id/waistbfpdropdown"

                />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/necktogglelayout"
            android:layout_marginTop="2.5mm"
            android:layout_marginLeft="18mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neck"
                android:id="@+id/necktextview"
                android:textSize="6.5mm"
                android:layout_marginTop="1mm"
                />
            <EditText
                android:inputType="number"
                android:id="@+id/body_fat_per_neck_edittext"
                android:layout_width="18mm"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8mm"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3mm"
                android:layout_marginLeft="3mm"

                >
                <TextView
                    android:id="@+id/neck_toggle_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="7mm"
                    android:textSize="6mm"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="cm"
                    android:layout_marginLeft="3mm"
                    />
                <ImageView
                    android:layout_marginLeft="1mm"
                    android:layout_marginTop="4mm"
                    android:layout_width="1.5mm"
                    android:layout_height="1mm"
                    android:id="@+id/neckbfpdropdown"

                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/hiptogglelayout"
        android:layout_marginTop="2.5mm"
        android:layout_marginLeft="18mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hip"
            android:id="@+id/hiptextview"
            android:textSize="6.5mm"
            android:layout_marginTop="1mm"
            />
        <EditText
            android:id="@+id/body_fat_per_hip_edittext"
            android:inputType="number"
            android:layout_width="18mm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3mm"
            android:layout_marginLeft="3mm"
            >
            <TextView
                android:id="@+id/hip_toggle_textview"
                android:layout_width="wrap_content"
                android:layout_height="7mm"
                android:textSize="6mm"
                android:background="?android:attr/selectableItemBackground"
                android:text="cm"
                android:layout_marginLeft="3mm"

                />
            <ImageView
                android:layout_marginLeft="1mm"
                android:layout_marginTop="4mm"
                android:layout_width="1.5mm"
                android:layout_height="1mm"
                android:id="@+id/hipbfpdropdown"

                />
        </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/calculate_body_fat_percentage"
            android:layout_width="25mm"
            android:layout_height="9.2mm"
            android:layout_marginTop="4mm"
            android:text="Calculate"
            android:textSize="2.7mm"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            />
